<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:background="@drawable/title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/maintextbox1_1">

            <TextView
                android:id="@+id/txt_problem_createdate"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@drawable/mainlistbackground"
                android:paddingLeft="40dp"
                android:paddingTop="5dp"
                android:layout_marginLeft="20dp"
                android:text="Create Time"
                android:textColor="@color/gray"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_customercontent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/maintextbox1_2"
            android:paddingLeft="16sp"
            android:paddingRight="16sp"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/maintextbox2_1">

            <TextView
                android:id="@+id/txt_problem_repeatedate"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@drawable/mainlistbackground"
                android:layout_marginLeft="20dp"
                android:paddingTop="5dp"
                android:paddingLeft="40dp"
                android:text="Create Time"
                android:textColor="@color/gray"
                android:textSize="12sp" />

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/et_problem_manacontent"
            android:background="@drawable/maintextbox2_2"/>

        <LinearLayout
            android:id="@+id/ll_givestart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16sp"
            android:orientation="horizontal"
            android:visibility="visible">

            <RatingBar
                android:id="@+id/rb_score"
                style="@style/myRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="3"
                android:stepSize="1" />

            <Button
                android:id="@+id/bt_send"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Send"
                android:textAllCaps="false"
                android:textSize="24sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
